<div class="post__item">
	<img src="{{ asset('build/images/post-image-dummy.png') }}" alt="Post title dummy" class="img-fluid">

	<div class="info-container">
		<div>
			<a class="post-title" href="#">{{ title }}</a>
			<small class="post-date">30 de Enero del 2020</small>

			<p class="post-excerpt">Lorem ipsum dolor sit ammet consectetur adispiscing lol...</p>
		</div>
		<div class="text-center">
			<img src="{{ asset('build/images/post-autor-dummy.png') }}" alt="Post Author" title="Post Author" class="img-fluid img-thumbnail rounded-circle">

			{% if edit is defined and edit == true %}
				<a href="{{ path('blog_edit', {post_id: 1}) }}" class="btn btn-primary btn-sm mt-2">
					<i class="fas fa-edit"></i>
				</a>
			{% endif %}
		</div>
	</div>
</div>
