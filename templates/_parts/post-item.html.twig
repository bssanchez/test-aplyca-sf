<div class="post__item">
	<img src="{{ asset(post.featured_image) }}" alt="Post title dummy" class="img-fluid">

	<div class="info-container">
		<div>
			<a class="post-title" href="#">{{ post.title }}</a>
			<small class="post-date">{{ post.published_date | date('d \\d\\e F \\d\\e\\l Y') }}</small>
		
			{% set content = post.content | striptags %}
			<p class="post-excerpt">{{ content | length > 58 ? content | slice(0,55) ~ '...' : content }}</p>
		</div>
		<div class="text-center">
			<img src="{{ asset('build/images/post-autor-dummy.png') }}" alt="{{ post.autor.fullname }}" title="{{ post.autor.fullname }}" class="img-fluid img-thumbnail rounded-circle">

			{% if is_granted('ROLE_USER') and post.autor.id == 3 %}
				<a href="{{ path('blog_edit', { post_id: post.id }) }}" class="btn btn-primary btn-sm mt-2">
					<i class="fas fa-edit"></i>
				</a>
			{% endif %}
		</div>
	</div>
</div>
